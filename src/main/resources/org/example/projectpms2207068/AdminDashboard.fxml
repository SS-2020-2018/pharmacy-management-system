<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.projectpms2207068.AdminDashboardController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="15.0"
              style="-fx-background-color: darkgreen;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
            </padding>

            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@image/admin_icon.png" />
                </image>
            </ImageView>

            <Label text="Welcome, Admin" textFill="white" />

            <Region VBox.vgrow="ALWAYS" />

            <Button fx:id="dashboardNavBtn" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    text="Dashboard" />
            <Button fx:id="addMedicinesNavBtn" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    text="Add Medicines" />
            <Button fx:id="orderNavBtn" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    text="Online Orders" />

            <Region VBox.vgrow="ALWAYS" />

            <Button fx:id="signOutBtn" maxWidth="Infinity"
                    style="-fx-background-color: red; -fx-text-fill: white;"
                    text="Sign Out" />
        </VBox>
    </left>

    <center>
        <StackPane>


            <AnchorPane fx:id="dashboardView" style="-fx-background-color: lightgray;" visible="false">
                <VBox alignment="TOP_CENTER" spacing="20.0"
                      AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
                      AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

                    <Label text="Dashboard" textFill="black" />

                    <HBox alignment="CENTER" spacing="30.0">
                        <VBox alignment="CENTER" prefHeight="120.0" prefWidth="220.0" spacing="10.0"
                              style="-fx-background-color: white;">
                            <Label fx:id="availableMedicinesLabel" text="0" textFill="black" />
                            <Label text="Available Medicines (qty>0)" textFill="black" />
                        </VBox>

                        <VBox alignment="CENTER" prefHeight="120.0" prefWidth="220.0" spacing="10.0"
                              style="-fx-background-color: white;">
                            <Label fx:id="totalIncomeLabel" text="0" textFill="black" />
                            <Label text="Total Income (Completed)" textFill="black" />
                        </VBox>

                        <VBox alignment="CENTER" prefHeight="120.0" prefWidth="220.0" spacing="10.0"
                              style="-fx-background-color: white;">
                            <Label fx:id="totalCustomersLabel" text="0" textFill="black" />
                            <Label text="Total Customers" textFill="black" />
                        </VBox>
                    </HBox>
                </VBox>
            </AnchorPane>


            <AnchorPane fx:id="addMedicinesView" style="-fx-background-color: lightgray;" visible="false">
                <VBox spacing="20.0"
                      AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
                      AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

                    <VBox spacing="15.0" style="-fx-background-color: white;">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <HBox alignment="CENTER_LEFT" spacing="20.0">

                            <VBox spacing="12.0" HBox.hgrow="ALWAYS">

                                <HBox spacing="15.0">
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Medicine ID:" textFill="black" />
                                        <TextField fx:id="medicineIdField" promptText="M-001" />
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Status:" textFill="black" />
                                        <ComboBox fx:id="statusCombo" maxWidth="Infinity" promptText="Choose..." />
                                    </VBox>
                                </HBox>

                                <HBox spacing="15.0">
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Brand Name:" textFill="black" />
                                        <TextField fx:id="brandNameField" promptText="Brand" />
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Price:" textFill="black" />
                                        <TextField fx:id="priceField" promptText="10.0" />
                                    </VBox>
                                </HBox>

                                <HBox spacing="15.0">
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Product Name:" textFill="black" />
                                        <TextField fx:id="productNameField" promptText="Product" />
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Type:" textFill="black" />
                                        <ComboBox fx:id="typeCombo" maxWidth="Infinity" promptText="Choose..." />
                                    </VBox>
                                </HBox>

                                <HBox spacing="15.0">
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Quantity:" textFill="black" />
                                        <TextField fx:id="quantityField" promptText="100" />
                                    </VBox>
                                </HBox>
                            </VBox>

                            <VBox alignment="TOP_CENTER" spacing="15.0">
                                <Button fx:id="addBtn" prefWidth="100.0"
                                        style="-fx-background-color: green; -fx-text-fill: white;"
                                        text="Add" />
                                <Button fx:id="clearBtn" prefWidth="100.0"
                                        style="-fx-background-color: gray; -fx-text-fill: white;"
                                        text="Clear" />
                                <Button fx:id="deleteBtn" prefWidth="100.0"
                                        style="-fx-background-color: red; -fx-text-fill: white;"
                                        text="Delete" />
                            </VBox>
                        </HBox>
                    </VBox>

                    <VBox spacing="10.0" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                        </padding>

                        <TableView fx:id="medicineTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colMedicineId" prefWidth="90.0" text="Medicine ID" />
                                <TableColumn fx:id="colBrandName" prefWidth="120.0" text="Brand Name" />
                                <TableColumn fx:id="colProductName" prefWidth="140.0" text="Product Name" />
                                <TableColumn fx:id="colType" prefWidth="100.0" text="Type" />
                                <TableColumn fx:id="colPrice" prefWidth="90.0" text="Price" />
                                <TableColumn fx:id="colQuantity" prefWidth="90.0" text="Quantity" />
                                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                                <TableColumn fx:id="colDate" prefWidth="110.0" text="Date" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </VBox>
            </AnchorPane>


            <AnchorPane fx:id="orderMedicinesView" style="-fx-background-color: lightgray;" visible="false">
                <VBox spacing="15.0"
                      AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
                      AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0"
                      style="-fx-background-color: white; -fx-padding: 20;">

                    <Label text="Pending Online Orders" textFill="black" />

                    <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colOrderId" text="Order ID" prefWidth="80.0"/>
                            <TableColumn fx:id="colOrderUser" text="User" prefWidth="120.0"/>
                            <TableColumn fx:id="colOrderMedicineId" text="Medicine ID" prefWidth="120.0"/>
                            <TableColumn fx:id="colOrderProduct" text="Product" prefWidth="160.0"/>
                            <TableColumn fx:id="colOrderQty" text="Qty" prefWidth="80.0"/>
                            <TableColumn fx:id="colOrderUnitPrice" text="Unit Price" prefWidth="100.0"/>
                            <TableColumn fx:id="colOrderTotal" text="Total" prefWidth="100.0"/>
                            <TableColumn fx:id="colOrderDate" text="Date" prefWidth="120.0"/>
                            <TableColumn fx:id="colOrderStatus" text="Status" prefWidth="110.0"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>

                    <HBox spacing="10">
                        <Button fx:id="refreshOrdersBtn" text="Refresh"
                                style="-fx-background-color: blue; -fx-text-fill: white;" />
                        <Button fx:id="completeOrderBtn" text="Complete Selected"
                                style="-fx-background-color: green; -fx-text-fill: white;" />
                    </HBox>

                </VBox>
            </AnchorPane>

        </StackPane>
    </center>
</BorderPane>
