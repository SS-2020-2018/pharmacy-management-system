<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projectpms2207068.UserDashboardController">

    <top>
        <VBox style="-fx-background-color: white;">
            <HBox alignment="CENTER" spacing="30.0" styleClass="user-navbar">
                <padding>
                    <Insets bottom="20.0" top="20.0" />
                </padding>


                <Button fx:id="homeBtn" styleClass="nav-button-active" text="HOME" />

                <Button fx:id="shopBtn" styleClass="nav-button" text="SHOP" />
                <Button fx:id="wishlistBtn" styleClass="nav-button" text="WISHLIST" />
                <Button fx:id="aboutBtn" styleClass="nav-button" text="ABOUT US" />
                <Button fx:id="managementBtn" styleClass="nav-button" text="MANAGEMENT" />
                <Button fx:id="contactBtn" styleClass="nav-button" text="CONTACT US" />
                <Button fx:id="careerBtn" styleClass="nav-button" text="CAREER OPPORTUNITIES" />
                <Button fx:id="accountBtn" styleClass="nav-button" text="MY ACCOUNT" />

            </HBox>
            <HBox style="-fx-background-color: #e0e0e0; -fx-pref-height: 1;" />
        </VBox>
    </top>


    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f9f9f9;">

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <content>
                    <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: transparent; -fx-padding: 40;" />
                </content>
            </ScrollPane>
        </StackPane>
    </center>

</BorderPane>
