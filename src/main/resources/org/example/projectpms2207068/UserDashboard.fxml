<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.projectpms2207068.UserDashboardController">

    <top>
        <VBox style="-fx-background-color: white;">
            <HBox alignment="CENTER" spacing="40.0" style="-fx-background-color: white;">
                <padding>
                    <Insets bottom="20.0" top="20.0" />
                </padding>

                <Button fx:id="homeBtn" text="HOME" style="-fx-background-color: lightgray; -fx-text-fill: black;" />
                <Button fx:id="shopBtn" text="SHOP" style="-fx-background-color: lightgray; -fx-text-fill: black;" />
                <Button fx:id="aboutBtn" text="ABOUT US" style="-fx-background-color: lightgray; -fx-text-fill: black;" />
                <Button fx:id="accountBtn" text="MY ACCOUNT" style="-fx-background-color: lightgray; -fx-text-fill: black;" />
                <Button fx:id="logoutbtn" text="Log Out" style="-fx-background-color: red; -fx-text-fill: white;" />
            </HBox>

            <HBox style="-fx-background-color: lightgray; -fx-pref-height: 1;" />
        </VBox>
    </top>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f0f0f0;">


            <AnchorPane fx:id="homeView" visible="true">
                <VBox spacing="15.0"
                      AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
                      AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

                    <Label text="Purchase / Order History" />

                    <TableView fx:id="purchaseTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colPHOrderId" text="Order ID" prefWidth="80.0"/>
                            <TableColumn fx:id="colPHMedicineId" text="Medicine ID" prefWidth="120.0"/>
                            <TableColumn fx:id="colPHProductName" text="Product Name" prefWidth="180.0"/>
                            <TableColumn fx:id="colPHQty" text="Qty" prefWidth="80.0"/>
                            <TableColumn fx:id="colPHTotal" text="Total Price" prefWidth="120.0"/>
                            <TableColumn fx:id="colPHDate" text="Date" prefWidth="120.0"/>
                            <TableColumn fx:id="colPHStatus" text="Status" prefWidth="120.0"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </AnchorPane>


            <AnchorPane fx:id="shopView" visible="false">
                <VBox spacing="15.0"
                      AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
                      AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

                    <Label text="Shop (Medicines)" />

                    <TableView fx:id="shopMedicineTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colSMedicineId" text="Medicine ID" prefWidth="110.0"/>
                            <TableColumn fx:id="colSBrand" text="Brand" prefWidth="140.0"/>
                            <TableColumn fx:id="colSProduct" text="Product" prefWidth="160.0"/>
                            <TableColumn fx:id="colSType" text="Type" prefWidth="120.0"/>
                            <TableColumn fx:id="colSPrice" text="Price" prefWidth="100.0"/>
                            <TableColumn fx:id="colSQuantity" text="Quantity" prefWidth="100.0"/>
                            <TableColumn fx:id="colSStatus" text="Status" prefWidth="110.0"/>
                            <TableColumn fx:id="colSDate" text="Date" prefWidth="120.0"/>
                            <TableColumn fx:id="colSBuy" text="BUY" prefWidth="90.0"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>

                </VBox>
            </AnchorPane>


            <AnchorPane fx:id="accountView" visible="false">
                <VBox spacing="10.0" AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="40.0">
                    <Label text="My Account" />
                    <Label text="User ID:" />
                    <Label fx:id="accountUsernameLabel" text="(not set)" />
                </VBox>
            </AnchorPane>


            <AnchorPane fx:id="aboutView" visible="false">
                <VBox spacing="10.0" AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="40.0">
                    <Label text="About Us" />
                    <Label text="Pharmacy Management System (JavaFX + SQLite)" />
                </VBox>
            </AnchorPane>

        </StackPane>
    </center>
</BorderPane>
