<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="550" prefWidth="900"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.projectpms2207068.LoginController">

    <VBox alignment="TOP_CENTER" prefWidth="260.0" spacing="15.0"
          style="-fx-background-color: green;">
        <padding>
            <Insets bottom="30" left="20" right="20" top="30" />
        </padding>

        <Label text="MediTrust" textFill="white"/>

        <Region VBox.vgrow="ALWAYS"/>

        <Button fx:id="adminBtn" maxWidth="Infinity" text="Admin Login"
                style="-fx-background-color: white; -fx-text-fill: black;"/>
        <Button fx:id="userBtn" maxWidth="Infinity" text="User Login"
                style="-fx-background-color: white; -fx-text-fill: black;"/>

        <Region VBox.vgrow="ALWAYS"/>
    </VBox>

    <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: white;">


        <VBox fx:id="adminPane" alignment="CENTER" spacing="12" visible="false">
            <Label text="Admin Login" textFill="black"/>
            <TextField fx:id="adminUserField" maxWidth="280" promptText="admin id"/>
            <PasswordField fx:id="adminPassField" maxWidth="280" promptText="password"/>
            <Button fx:id="adminLoginBtn" text="Login" maxWidth="200"
                    style="-fx-background-color: green; -fx-text-fill: white;"/>
        </VBox>


        <VBox fx:id="userPane" alignment="CENTER" spacing="12" visible="true">
            <Label text="User Login" textFill="black"/>
            <TextField fx:id="userIdField" maxWidth="280" promptText="username"/>
            <PasswordField fx:id="userPassField" maxWidth="280" promptText="password"/>
            <Button fx:id="userLoginBtn" text="Login" maxWidth="200"
                    style="-fx-background-color: blue; -fx-text-fill: white;"/>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Not registered?" />
                <Hyperlink fx:id="registerLink" text="Register Now" />
            </HBox>
        </VBox>


        <VBox fx:id="registerPane" alignment="CENTER" spacing="12" visible="false">
            <Label text="Register" textFill="black"/>
            <TextField fx:id="regUserIdField" maxWidth="280" promptText="new username"/>
            <PasswordField fx:id="regPasswordField" maxWidth="280" promptText="new password"/>
            <PasswordField fx:id="regConfirmPasswordField" maxWidth="280" promptText="confirm password"/>

            <Button fx:id="registerBtn" text="Register" maxWidth="200"
                    style="-fx-background-color: blue; -fx-text-fill: white;"/>

            <Hyperlink fx:id="backToLoginLink" text="Back to Login"/>
        </VBox>

    </StackPane>
</HBox>
